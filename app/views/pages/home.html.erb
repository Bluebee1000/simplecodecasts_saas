<div class="jumbotron text-center">
	<h1>Welcome to the brotherhood</h1>
	<h3>A membership site for people with a deep, penetrating, passion for music.</h3>
</div>
<div class="row">
	<% if user_signed_in? %>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">Your Papers</h2>
				<p class="text-center">"Papers" is way better than "Profile" but it means the same thing.</p>
				<% if current_user.profile %>
					<%= link_to "Edit Papers", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
					<%= link_to "View Papers", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
				<% else %> 
					<%= link_to "Fill out your papers!", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
					<p class="text-center">Fill out your papers to share some info with the brotherhood.</p>
				<% end %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">The Brotherhood</h2>
				<p class="text-center">The list of all members of the site who have filled out their papers.</p>
				<%= link_to "View Members", users_path, class: 'btn btn-default btn-lg btn-block' %>
			</div>
		</div>
	<% else %>
		<!--Sign up buttons>-->
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">Basic Membership</h2>
				<h4 class="text-center">The low status membership.</h4>
				<%= link_to "Basic Sign up", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">Pro Membership</h2>
				<h4 class="text-center">The high status membership!</h4>
				<%= link_to "Pro Sign up", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
			</div>
		</div>
	<% end %>
</div>