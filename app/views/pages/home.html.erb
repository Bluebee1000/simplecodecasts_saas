<div class="jumbotron text-center">
	<h1>Welcome to Dev match</h1>
	<h3>A membership site where entrepeneurs can meet developers.</h3>
</div>
<div class="row">
	<% if user_signed_in? %>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">Your Profile</h2>
				<% if current_user.profile %>
					<%= link_to "Edit profile", "#", class: 'btn btn-default btn-lg btn-block' %>
					<%= link_to "View profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
				<% else %> 	
					<%= link_to "Create your profile!", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
				<% end %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">The Community</h2>
				<p>State and discuss your opinions on the content of the site</p>
				<%= link_to "Visit with Community", "#", class: 'btn btn-default btn-lg btn-block' %>
			</div>
		</div>
	<% else %>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">Basic Membership</h2>
				<h4>The basic, shitty one.</h4>
				<%= link_to "Basic Sign up", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="well">
				<h2 class="text-center">Pro Membership</h2>
				<h4>The good one!</h4>
				<%= link_to "Pro Sign up", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
			</div>
		</div>
	<% end %>
</div>